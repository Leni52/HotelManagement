@model IEnumerable<IdentityRole>
@{
    ViewData["Title"] = "ListRoles";
}

<h1>List of Roles</h1>

@if (Model.Any())
{
    <a class="btn btn-primary mb-3" asp-action="CreateRole" asp-controller="administration">
        Add new role
    </a>
    foreach(var role in Model)
    {
        <div class="card mb-3">
           <div class="card-header">
               Role Id: @role.Id
           </div> 
           <div class="card-body">
               <h5>@role.Name</h5>
               
           </div>
           <div class="card-footer">
               <a class="btn btn-primary"
           asp-action="EditRole" asp-controller="Administration"
           asp-route-id="@role.Id">Edit</a>
                <a class="btn btn-primary" asp-action="DeleteRole" asp-controller="Administration"
           asp-route-id="@role.Id" >Delete</a>
           </div>
        </div>
    }

}

else
{
    <div class="card">
        <div class="card-header">
            No roles created yet
        </div>
        <div class="card-body">
            <h5 class="card-title">Use the button below to create a role</h5>            
        
        <a class="btn btn-primary" asp-controller="administration" asp-action="CreateRole">Create role</a>
        </div>
    </div>
}
