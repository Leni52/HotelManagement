@model IEnumerable<Room>
@{Layout = "_Layout";
}

<h5 class="bg-primary text-white text-center p-2">Hotel Management System</h5>

@*  <partial name="_Validation" /> *@

<table class="table table-sm table-bordered table-striped">
    <thead>
        <tr>
           <th>ID</th><th>Price</th><th>Room Type</th><th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (Room r in Model) {
            <tr>
                <td>@r.RoomId</td>
                <td>@r.Price</td>
                <td>@r.RoomType</td>
                <td>@r.Description</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@r.Price"
                       class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@r.RoomType"
                       class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@r.Description"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Create</a>

